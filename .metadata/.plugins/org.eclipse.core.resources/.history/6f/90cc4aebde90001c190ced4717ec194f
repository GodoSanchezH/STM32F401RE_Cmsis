#ifndef INC_GPIO_H_
#define INC_GPIO_H_

#include "stm32f401xe.h"
#include <stdint.h>
#include <stdio.h>
#include <stdbool.h>


//Definimos la direccion del Clock de los Puertos
#define RCC_AHB1RSTR     (*((volatile unsigned long *) 0x40023810))

#define GPIO_A          (*((volatile unsigned long *) 0x40020000))
#define GPIO_B          (*((volatile unsigned long *) 0x40020400))
#define GPIO_C          (*((volatile unsigned long *) 0x40020800))


/// List of Ports
#define PA 1
#define PB 2
#define PC 3

/// Directions
#define IN 0
#define OUT10 1
#define OUT2  2
#define OUT50 3
/// Direction options for input
#define I_AN 0
#define I_F  1
#define I_PP 2

/// Direction options for output

#define O_GP_PP 0
#define O_GP_OD 1
#define O_AF_PP 2
#define O_AF_OD 3

/// State definition
#define LOW  0
#define HIGH 1



void init_GP(unsigned short port, unsigned short pin, unsigned short dir, unsigned short opt);

int R_GP(unsigned short port, unsigned short pin);

void W_GP(unsigned short port, unsigned short pin, unsigned short state);

void toggle_GP(unsigned short port, unsigned short pin);




#endif /* INC_GPIO_H_ */
